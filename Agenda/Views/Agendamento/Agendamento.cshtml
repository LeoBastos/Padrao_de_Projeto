@model Agenda.Service.Dto.AgendamentoFormDto
<div class="container">
    <div class="card">
        <div class="card-header">
            Agendar Cliente
        </div>
        <div class="card-body">
            <form action="~/Agendamento/SubmitAgendamento" method="post">
                @Html.HiddenFor(i => i.Id)
                @Html.HiddenFor(i => i.Cliente.Id)
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="nome">Cliente</label>
                        @Html.DropDownList("Cliente.Nome", Model.SelectCliente,"Escolha", new { Class = "form-control" })
                    </div>
                    <div class="form-group col-md-6">
                        <label for="servico">Serviço</label>
                        @Html.DropDownList("Servico.Descricao", Model.SelectServico, "Escolha", new { Class = "form-control" })
                    </div>

                </div>
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="DataAgendamento">Data Agendamento</label>
                        @Html.TextBoxFor(i => i.DataAgendamento, new { Class = "form-control", type = "date" })
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inicio">Horário Inicio</label>
                        @Html.TextBoxFor(i => i.Inicio, new { Class = "form-control", type = "time" })
                    </div>
                    <div class="form-group col-md-3">
                        <label for="fim">Horário Fim</label>
                        @Html.TextBoxFor(i => i.Fim, new { Class = "form-control", type = "time" })
                    </div>
                    <div class="form-group col-md-3">
                        <label for="FormaDePagamento">Forma de Pagamento</label>                        
                        <select class="form-control" id="FormaDePagamento" name="FormaDePagamento">
                            <option value="0">Cartão de Crétido</option>
                            <option value="1">Cartão de Débito</option>
                            <option value="2">Convênio</option>
                            <option value="3">Dinheiro</option>
                        </select>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Cadastrar</button>
            </form>
        </div>
    </div>

</div>

