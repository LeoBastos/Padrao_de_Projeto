@model Agenda.Service.Dto.IndexDto

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <a href="NewCliente" class="btn btn-primary btn-icon-split btn-sm">
            <span class="text">Cadastrar Cliente </span>
            <span>
                <i class="fa fa-plus"></i>
            </span>
        </a>
    </div>

<h1>@Model.TotalClientes</h1>


    <div container>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Email</th>
                    <th scope="col">Telefone</th>
                    <th scope="col">CPF</th>
                    <th scope="col">Data de Nascimento</th>
                    <th scope="col">Visualizar</th>
                    <th scope="col">Agendar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Clientes)
                {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Nome</td>
                    <td>@item.Email </td>
                    <td>@item.Telefone</td>
                    <td>@item.Cpf</td>
                    <td>@item.DataNascimento</td>
                    <td>
                        <a href="~/Cliente/GetClienteById/@item.Id" type="button" class="btn btn-info btn-sm"><i class="fa fa-eye" aria-hidden="true"></i></a>
                    </td>
                    <td>
                        <a href="~/Agendamento/NewAgendamento/" type="button" class="btn btn-primary btn-sm"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                    </td>
                </tr>
                }

            </tbody>
        </table>
    </div>